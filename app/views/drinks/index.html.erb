<div class="page-header">
  <h1>
    Drinks
    <a href="/drinks/new" class="btn btn-lg btn-success">New Drink</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Brand</th>
        <th>Actions</th>
      </tr>

      <% @drinks.each do |drink| %>
      <tr>
        <td><%= drink.name %></td>
        <td><%= drink.category.name %></td>
        <td><%= drink.brand_id %></td>
        <td>
          <a href="/drinks/<%= drink.id %>" class="btn btn-primary">Show</a>
          <a href="/drinks/<%= drink.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_drink/<%= drink.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
